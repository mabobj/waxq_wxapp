.stv-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.withAnimate {
  transition: all 100ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}

.stv-container .tab-bar {
  position: relative;
  display: flex;
  font-size: 30rpx;
  color: #666;
}

.stv-container .tab-bar .tab-active {
  color: #2d80ff;
}

.stv-container .tab-bar .tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 16rpx;
  padding-bottom: 20rpx;
}

.stv-container .tab-bar .under-line {
  position: absolute;
  bottom: 0;
  height: 6rpx;
  background-color: #2d80ff;
}

.stv-container .scroll-view {
  position: relative;
  width: 100%;
  height: 100%;
  background: #e7eaef;
}

.stv-container .scroll-view .scroll-view-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
}

.stv-container .scroll-view .scroll-view-wrapper {
  height: 100%;
}

.one-scene {
  height: 93%;
}

.one-scene .row {
  padding: 20rpx 30rpx 20rpx 30rpx;
}

.one-scene .row .text_box {
  float: right;
  width: 420rpx;
}

.one-scene .row .text_box > view:first-child {
  font-size: 55rpx;
  height: 150rpx;
  line-height: 150rpx;
}

.one-scene .row .text_box >view:last-child {
  font-size: 30rpx;
}

.one-scene .row .text_box >view:last-child > text:last-child {
  padding-left: 30rpx;
}

.one-scene .row image {
  width: 250rpx;
  height: 250rpx;
}

.yedd .row image {
  width: 150rpx;
  height: 150rpx;
}

.yedd .row  .text_box {
  float: right;
  width: 520rpx;
}
.yedd .row .text_box > view:first-child {
  font-size: 35rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.yedd.row .text_box >view:last-child {
  font-size: 18rpx;
}
